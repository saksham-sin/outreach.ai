# Database Configuration (PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/outreach_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=outreach_ai

# Authentication & Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_DAYS=7
MAGIC_LINK_EXPIRE_MINUTES=15

# OpenAI Configuration (Required for AI email generation)
OPENAI_API_KEY=sk-...your-openai-api-key...

# Email Provider Selection: "postmark" or "resend"
EMAIL_PROVIDER=postmark
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Outreach AI

# Postmark Configuration (if EMAIL_PROVIDER=postmark)
POSTMARK_SERVER_TOKEN=your-postmark-server-token
POSTMARK_INBOUND_ADDRESS=inbound@yourdomain.postmarkapp.com

# Resend Configuration (if EMAIL_PROVIDER=resend)
RESEND_API_KEY=re_...your-resend-api-key...
RESEND_FROM_DOMAIN=yourdomain.com

# Application URLs
APP_BASE_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Webhook Security (for Postmark reply webhooks)
WEBHOOK_USERNAME=webhook_user
WEBHOOK_PASSWORD=webhook_password_change_this

# Worker Configuration
WORKER_POLL_INTERVAL_SECONDS=5
MAX_RETRY_ATTEMPTS=3

# Frontend - Backend Communication
VITE_BACKEND_HOST=https://api.yourdomain.com
