# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/outreach_db

# Authentication
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_DAYS=7
MAGIC_LINK_EXPIRE_MINUTES=15

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-5-mini

# Email Provider Selection
# Options: "postmark" or "resend"
EMAIL_PROVIDER=resend
EMAIL_FROM_ADDRESS=notifications@yourdomain.com
EMAIL_FROM_NAME=Outreach AI

# Postmark (when EMAIL_PROVIDER=postmark)
POSTMARK_SERVER_TOKEN=your-postmark-server-token
POSTMARK_INBOUND_ADDRESS=reply@yourdomain.com

# Resend (when EMAIL_PROVIDER=resend)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_DOMAIN=yourdomain.com

# Reply Detection Mode
# Options: "webhook" (use Postmark inbound webhook) or "simulated" (manual marking via API)
REPLY_MODE=simulated

# Legacy (for backwards compatibility - prefer EMAIL_FROM_* instead)
FROM_EMAIL=notifications@yourdomain.com
FROM_NAME=Your Company

# App
APP_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Webhook Security
WEBHOOK_USERNAME=webhook_user
WEBHOOK_PASSWORD=webhook_secret_password
