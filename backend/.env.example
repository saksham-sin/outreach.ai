# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/outreach_db

# Authentication
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_DAYS=7
MAGIC_LINK_EXPIRE_MINUTES=15

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-5-mini

# Email Sender Configuration (Dual Sender Identity)
# ---------------------------------------------------
# AUTH emails: Magic links, authentication (no-reply)
EMAIL_AUTH_FROM_ADDRESS=no-reply@example.com
EMAIL_AUTH_FROM_NAME=Your App Name

# OUTREACH emails: Campaign and follow-ups (replies expected)
EMAIL_OUTREACH_FROM_ADDRESS=hello@example.com
EMAIL_OUTREACH_FROM_NAME=Your App Name
EMAIL_OUTREACH_REPLY_TO=hello@example.com

# Resend Email Provider (sole production provider)
RESEND_API_KEY=re_your_key_here
RESEND_FROM_DOMAIN=example.com

# App
APP_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
