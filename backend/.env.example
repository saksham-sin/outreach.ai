# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/outreach_db

# Authentication
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_DAYS=7
MAGIC_LINK_EXPIRE_MINUTES=15

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-5-mini

# Email Sender Configuration (Dual Sender Identity)
# ---------------------------------------------------
# AUTH emails: Magic links, authentication (no-reply)
EMAIL_AUTH_FROM_ADDRESS=no-reply@outreachai-demo.online
EMAIL_AUTH_FROM_NAME=Outreach AI

# OUTREACH emails: Campaign and follow-ups (replies expected)
EMAIL_OUTREACH_FROM_ADDRESS=hello@outreachai-demo.online
EMAIL_OUTREACH_FROM_NAME=Outreach AI
EMAIL_OUTREACH_REPLY_TO=hello@outreachai-demo.online

# Resend Email Provider (sole production provider)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_DOMAIN=yourdomain.com

# App
APP_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
